<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="payments_section" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Payments</label>
                <comment><![CDATA[Global Payment Management Platform enables merchants to accept and manage payments, mitigate fraud, and secure their payment data.]]></comment>
                <attribute type="expanded">1</attribute>
                <fieldset_css>complex</fieldset_css>
                <!--<frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>-->
                <frontend_model>Payments\Core\Block\Adminhtml\Config\Fieldset</frontend_model>
                <group id="payments_general" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>General</label>
                    <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="1">
                        <label>Enabled</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/payments_sa/active</config_path>
                    </field>
                    <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="1">
                        <label>Title</label>
                        <config_path>payment/payments_sa/title</config_path>
                    </field>
                    <field id="dm_fail_sender" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                        <label>DM fail email sender</label>
                        <source_model>Magento\Config\Model\Config\Source\Email\Identity</source_model>
                        <config_path>payment/payments_sa/dm_fail_sender</config_path>
                    </field>
                    <field id="dm_fail_template" translate="label comment" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                        <label>DM fail email template</label>
                        <source_model>Payments\Core\Model\Config\Source\Email\Template</source_model>
                        <config_path>payment/payments_sa/dm_fail_template</config_path>
                    </field>
                    <field id="secureacceptance_type" translate="label comment" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                        <label>Secure Acceptance Type</label>
                        <comment>Use SOP in order to enable Multi-shipping feature.</comment>
                        <source_model>Payments\Core\Model\Source\SecureAcceptance\Type</source_model>
                        <config_path>payment/payments_sa/secureacceptance_type</config_path>
                    </field>
                    <field id="cctypes" translate="label" type="multiselect" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                        <label>Credit Card Types</label>
                        <comment>for SOP only</comment>
                        <source_model>Payments\Core\Model\Source\Cctype</source_model>
                        <config_path>payment/payments_sa/cctypes</config_path>
                    </field>
                    <field id="payment_action" translate="label" type="select" sortOrder="61" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Payment Action for SecureAcceptance</label>
                        <comment>both SOP and WEB/Mobile</comment>
                        <source_model>Payments\SecureAcceptance\Model\Adminhtml\Source\PaymentAction</source_model>
                        <config_path>payment/payments_sa/payment_action</config_path>
                    </field>
                    <field id="service_url" translate="label" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                        <label>Service URL</label>
                        <config_path>payment/payments_sa/service_url</config_path>
                    </field>
                    <field id="service_url_test" translate="label" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                        <label>Service URL for tests</label>
                        <config_path>payment/payments_sa/service_url_test</config_path>
                    </field>
                    <field id="allowspecific" translate="label" type="allowspecific" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                        <label>Payment from Applicable Countries</label>
                        <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
                        <config_path>payment/payments_sa/allowspecific</config_path>
                    </field>
                    <field id="specificcountry" translate="label" type="multiselect" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Payment from Specific Countries</label>
                        <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                        <config_path>payment/payments_sa/specificcountry</config_path>
                    </field>
                    <field id="enable_dm_cron" translate="label" type="select" sortOrder="130" showInDefault="1" showInWebsite="0" showInStore="1">
                        <label>Enable DM CRON</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/payments_sa/enable_dm_cron</config_path>
                    </field>
                    <field id="enable_dm_accepted_settlement" translate="label" type="select" sortOrder="132" showInDefault="1" showInWebsite="0" showInStore="1">
                        <label>Settle DM accepted orders automatically</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/payments_sa/enable_dm_accepted_settlement</config_path>
                    </field>
                    <field id="test_mode" translate="label" type="select" sortOrder="135" showInDefault="1" showInWebsite="0" showInStore="1">
                        <label>Test Mode</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/payments_sa/test_mode</config_path>
                    </field>
                    <field id="debug" translate="label" type="select" sortOrder="140" showInDefault="1" showInWebsite="0" showInStore="1">
                        <label>Debug Mode</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/payments_sa/debug</config_path>
                    </field>
                    <field id="sort_order" translate="label" type="text" sortOrder="150" showInDefault="1" showInWebsite="0" showInStore="1">
                        <label>Sort Order</label>
                        <config_path>payment/payments_sa/sort_order</config_path>
                    </field>
                    <field id="developer_id" translate="label" type="text" sortOrder="155" showInDefault="1" showInWebsite="0" showInStore="1">
                        <label>Developer ID</label>
                        <config_path>payment/payments_sa/developer_id</config_path>
                    </field>
                    <field id="auth_indicator" translate="label" type="select" sortOrder="175" showInDefault="1" showInWebsite="0" showInStore="1">
                        <label>Auth Indicator</label>
                        <comment><![CDATA[Flag that specifies the purpose of the authorization.]]></comment>
                        <source_model>Payments\Core\Model\Source\AuthIndicator</source_model>
                        <config_path>payment/payments_sa/auth_indicator</config_path>
                    </field>
                    <field id="show_exact_error" translate="label" type="select" sortOrder="190" showInDefault="1" showInWebsite="0" showInStore="0">
                        <label>Show exact rejection or error message to users</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/payments_sa/show_exact_error</config_path>
                        <comment><![CDATA[If set to "No" the general error message will be displayed in all rejection and error cases.]]></comment>
                    </field>
                    <field id="override_error_page_route" translate="label" type="text" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                        <label>Override payment error route path</label>
                        <config_path>payment/payments_sa/override_error_page_route</config_path>
                        <comment><![CDATA[Specify the error page route path or the "checkout/cart" route is used by default.]]></comment>
                    </field>
                </group>
                <group id="payments_address" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Delivery Address Verification Service</label>
                    <field id="address_check_enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="1">
                        <label>Address verification</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/payments_sa/address_check_enabled</config_path>
                    </field>
                    <field id="address_force_normal" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="1">
                        <label>Address force normalization</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/payments_sa/address_force_normal</config_path>
                    </field>
                </group>
                <group id="payments_fingerprint" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Device Fingerprint</label>
                    <field id="fingerprint_enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="1">
                        <label>Active</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/payments_sa/fingerprint_enabled</config_path>
                    </field>
                    <field id="fingerprint_org_id" translate="label" type="obscure" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="1">
                        <label>Org ID</label>
                        <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                        <config_path>payment/payments_sa/org_id</config_path>
                    </field>
                </group>
                <group id="gatewayapi" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>WebService Configuration</label>
                    <field id="merchant_id" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Merchant ID</label>
                        <config_path>payment/payments_sa/merchant_id</config_path>
                    </field>
                    <field id="use_test_wsdl" translate="label" type="select" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Test Mode</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/payments_sa/use_test_wsdl</config_path>
                    </field>
                    <group id="gatewayapi_soap" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>SOAP</label>
                        <field id="transaction_key" translate="label" type="obscure" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="0">
                            <label>Transaction Key</label>
                            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                            <config_path>payment/payments_sa/transaction_key</config_path>
                        </field>
                        <field id="path_to_wsdl" translate="label" type="text" sortOrder="8" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                            <label>Path to WSDL</label>
                            <config_path>payment/payments_sa/path_to_wsdl</config_path>
                        </field>
                        <field id="path_to_test_wsdl" translate="label" type="text" sortOrder="9" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                            <label>Path to test WSDL</label>
                            <config_path>payment/payments_sa/path_to_test_wsdl</config_path>
                        </field>
                    </group>
                    <group id="gatewayapi_rest" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>REST</label>
                        <field id="rest_key_id" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="0">
                            <label>Shared Key ID</label>
                            <config_path>payment/payments_sa/rest_key_id</config_path>
                        </field>
                        <field id="rest_key_value" translate="label" type="obscure" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                            <label>Shared Key Value</label>
                            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                            <config_path>payment/payments_sa/rest_key_value</config_path>
                        </field>
                    </group>
                </group>
            </group>
        </section>
    </system>
</config>
